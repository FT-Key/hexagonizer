#!/usr/bin/env bash
# bin/hexagon

DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"

show_menu() {
  echo "üöÄ Hexagon CLI"
  echo "====================="
  echo "1. Inicializar proyecto"
  echo "2. Generar nueva entidad"
  echo "3. Normalizar scripts (.sh)"
  echo "4. Salir"
  echo "====================="
}

read_option() {
  local choice
  read -rp "üëâ Selecciona una opci√≥n [1-4]: " choice
  case "$choice" in
    1) bash "$DIR/scripts/init-project.sh" ;;
    2) bash "$DIR/scripts/entity-generator.sh" ;;
    3) bash "$DIR/hexagon/utils/normalizer-dos-to-unix.sh" ;;
    4) echo "üëã Saliendo..."; exit 0 ;;
    *) echo "‚ùå Opci√≥n inv√°lida" ;;
  esac
  echo
  read -rp "Presiona ENTER para continuar..."
}

while true; do
  show_menu
  read_option
done
